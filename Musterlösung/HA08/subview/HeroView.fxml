<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" alignment="CENTER_RIGHT" prefHeight="267.0" prefWidth="1280.0">
    <children>
        <VBox alignment="BOTTOM_CENTER" spacing="10.0">
            <children>
                <HBox spacing="5.0">
                    <children>
                        <Button fx:id="attackButton" mnemonicParsing="false" text="Attack"/>
                        <Button fx:id="defenseButton" mnemonicParsing="false" text="Defense"/>
                    </children>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label fx:id="heroNameLabel" text="Sir Slayalot">
                            <font>
                                <Font size="28.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </VBox>
        <VBox alignment="BOTTOM_CENTER" spacing="10.0">
            <children>
                <HBox spacing="5.0">
                    <children>
                        <Label fx:id="heroCoinsLabel" text="100">
                            <font>
                                <Font size="28.0"/>
                            </font>
                        </Label>
                        <Label text="Coins">
                            <font>
                                <Font size="28.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0">
                    <children>
                        <Label text="LP:">
                            <font>
                                <Font size="28.0"/>
                            </font>
                        </Label>
                        <Label fx:id="currentLpHeroLabel" text="70">
                            <font>
                                <Font size="28.0"/>
                            </font>
                        </Label>
                        <Label text="/">
                            <font>
                                <Font size="28.0"/>
                            </font>
                        </Label>
                        <Label fx:id="maxLpHeroLabel" text="100">
                            <font>
                                <Font size="28.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets right="20.0"/>
            </padding>
        </VBox>
    </children>
</HBox>
